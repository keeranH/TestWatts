    <script type="text/javascript">
        function loginSuccess(result) {
            if (result.Url) {
                location.href = result.Url;
            }
        }
        $.validator.methods.number = function (value, element) {
            return this.optional(element) || !isNaN(Globalize.parseFloat(value));
        }
        $.validator.methods.range = function (value, element, param) {
            return this.optional(element) || (Globalize.parseFloat(value) >= param[0] && Globalize.parseFloat(value) <= param[1]);
        }

        $.validator.methods.date = function (value, element) {
            return this.optional(element) ||!isNaN(Globalize.parseDate(value));
        }

        $(document).ready(function () {
            Globalize.culture('en-GB');

            // Only there to show which culture are being used.
            //console.log(Globalize.culture().name);
        });

        //<![CDATA[
        $(window).load(function () {
            $('body').bind('mousewheel', function (e) { // on scroll
                var $div = $('#layoutMainContentDiv');              
                // set div scroll top offset to current + extra from this scroll
                $div.scrollTop($div.scrollTop()
                    - e.originalEvent.wheelDelta);

                return false; // prevent body scrolling
            });
        });  //]]>  
    </script>
