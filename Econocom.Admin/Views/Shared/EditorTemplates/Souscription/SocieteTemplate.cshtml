@model Econocom.Model.ViewModel.SocieteSouscriptionViewModel

@{
    ViewBag.Title = "Societe_Layout";
    Layout = "~/Views/Shared/Souscription_Layout/SocieteSouscription_Layout.cshtml";
    
    <style type="text/css">
        

.CpTextBox
{
     width: 78px;
     height: 29px;
}

.villeTextBox
{
     width: 219px;
     height: 29px;
     
}


.societeLabelFor {
    font-family: "sans-serif";
}

.societeTextBox {
    width: 320px;
    height:29px
}
    </style>
    
}

@section CodeInterne{
    <div class="editor-field">
        <div style="width: 200px; float:left;height: 25px; margin-top: 5px"> @Html.LabelFor(model => Model.CodeInterneWattsGreen, "Code Interne Watts Green: ", new { @class = "societeLabelFor" })</div>
         @Html.TextBoxFor(model=>Model.CodeInterneWattsGreen)
    </div>
}


@section option{


    @if (ViewBag.subscribeType != "start")
{
    
    
      <div align="left" style="width: 200px; float: left">
        
       <span style="font-size: 1.5em"> La société</span>
    </div>

}


}

@Html.HiddenFor(model => Model.ClientId)

@section RaisonSociale{
    <div class="editor-field">
        <div>
            <div style="width: 105px; float:left">@Html.LabelFor(model => Model.RaisonSociale, "Raison Sociale", new { @class = "societeLabelFor" })</div>
            <div style="width: 20px;  float:left"><span style="color:#83b81a; font-weight: bold; font-size: 13px"> *</span></div>
        </div>

        
        @Html.TextBoxFor(model => Model.RaisonSociale,new{@class="societeTextBox"})
    </div>
}

@section Addresse{
    <div class="editor-field">
        
        <div style="width: 60px; float:left">
            @Html.LabelFor(model => Model.Addresse, "Adresse", new { @class = "societeLabelFor" })
        </div>
        
        <div style="width: 20px;  float:left"><span style="color:#83b81a; font-weight: bold; font-size: 13px"> *</span></div>

       
        @Html.TextAreaFor(model => Model.Addresse,
                          new { style = "width: 320px; height: 75px;resize: none;" }
             )

    </div>
}

@section CP{
    <div class="editor-field">
        
        <div style="width: 70px; height: 30px">
             <div style=" float:left; width: 30px">
             @Html.LabelFor(model => Model.CodePostal, "CP", new { @class = "societeLabelFor"})
        </div>
        
        <div style="width: 20px;  float:left"><span style="color:#83b81a; font-weight: bold; font-size: 13px"> *</span></div>

        

        </div>
       
       
        @Html.TextBoxFor(model => Model.CodePostal, new { @class = "CpTextBox" })
    </div>
}

@section Ville{
    <div class="editor-field">
        
         <div style="width: 70px; height: 30px">
             <div style=" float:left; width: 40px">
              @Html.LabelFor(model => Model.Ville, "Ville", new { @class = "societeLabelFor"})
        </div>
        
        <div style="width: 20px;  float:left"><span style="color:#83b81a; font-weight: bold; font-size: 13px"> *</span></div>

        

        </div>
        

       
        @Html.TextBoxFor(model => Model.Ville, new { @class = "villeTextBox" })
    </div>
}

@section Tva{
 <div class="editor-field">
@Html.LabelFor(model => Model.Tva, "No. de Tva Intra-communautaire", new { @class = "societeLabelFor" })
@Html.TextBoxFor(model => Model.Tva, new { @class = "societeTextBox" })
</div>
}

@section DejaClient{
 <div class="editor-field">
@Html.LabelFor(model => Model.ClientEconocom, "Etes vous deja client a Econocom?", new { @class = "societeLabelFor", @style="width:300px" })


@Html.DropDownListFor(model => Model.ClientEconocom, new[] {
                                    new SelectListItem { Text = "Oui",
                                                         Value = bool.TrueString },
                                    new SelectListItem { Text = "Non",
                                                         Value = bool.FalseString }
                                    })

 </div>
}

@section Groupe{
 <div class="editor-field">
@Html.LabelFor(model => Model.Groupe, new { @class = "societeLabelFor" })
@Html.TextBoxFor(model => Model.Groupe, new { @class = "societeTextBox" })
</div>
}

@section Pays{  
    <div class="editor-field">
        
         <div style="float:left">
          @Html.LabelFor(model => Model.Groupe, "Pays", new { @class = "societeLabelFor",@style="height:30px" })
        </div>
        
        <div style="width: 20px;  float:left"><span style="color:#83b81a; font-weight: bold; font-size: 13px"> *</span></div>

        @Html.DropDownListFor(m => m.PaysId, new SelectList(Model.ListPays, "Id", "LibellePays", Model.PaysId), new { style = "width: 310px; height: 30px;" }) 

    </div>
}


@section IdentificationNational{
     <div class="editor-field">
    @Html.LabelFor(model => Model.IdentificationNational, "Identifiant National", new { @class = "societeLabelFor" })
    @Html.TextBoxFor(model => Model.IdentificationNational, new { @class = "societeTextBox" })
    </div>
}

@section ChiffresAffaires{
     <div class="editor-field">
    @Html.LabelFor(model => Model.ChiffresAffaires, "Chiffres D'affaires", new { @class = "societeLabelFor" })
    @Html.TextBoxFor(model => Model.ChiffresAffaires, new { @class = "societeTextBox" })
    </div>
}


@section VotreContacte{
     <div class="editor-field">
    @Html.LabelFor(model => Model.VotreContacte, "Votre Contacte chez Econocom", new { @class = "societeLabelFor" })
    @Html.TextBoxFor(model => Model.VotreContacte, new { @class = "societeTextBox" })
    </div>
}