@model Econocom.Model.ViewModel.RegistrationClientModel
@using Econocom.Model.ViewModel
@using ClientDetailsResources = Econocom.Resource.Traduction

  
    @*<script src="@Url.Content("~/Scripts/jquery.mobile-1.2.0.min.js")" type="text/javascript"></script>*@
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    
        <div  style="width:1150px;min-height:300px; margin-bottom:100px ">
            <div style="float:left;min-width:571px;min-height:300px; margin-top: 15px">
              
                <div style="float: left;min-width:450px;min-height:200px; margin-left: 40px">
                     @Html.HiddenFor(model => model.Id)
                     @Html.HiddenFor(model => model.AdresseId)
                    
                   </div>
                    <div>                                     
                        @Html.EditorFor(model => model.Group)
                    </div>
                
                
                    <div>
                        @Html.EditorFor(model => model.Nom)
                    </div>
              
                    <div>
                        @Html.EditorFor(model => model.RaisonSociale)
                    </div>
                  
                </div>
                
                <div style="float: left;min-width:420px;min-height:200px;">
                
                <div>
                    @Html.EditorFor(model => model.TVAIntraComm)
                </div>
                
                    <div>
                        @Html.EditorFor(model => model.CODENAF)
                    </div>
                    
                       <div>
                        @Html.EditorFor(model => model.IdentificationNational)
                    </div>
                    
                    
                </div>

                    <div>
                    @Html.EditorFor(model => model.Adresse)
                </div>
                
                <div >
                   
                </div>
                
          
               <div>
                <ul id="contactEditor" style="list-style-type: none">
                     @Html.ValidationMessageFor(model => model.Contacts)
           
                    @if (Model != null && Model.Contacts != null)
                    {
                        foreach (ContactViewModel contact in Model.Contacts)
                        {
                            Html.RenderPartial("ContactEditor", contact);
                        }
                    }
                </ul>

                   <a id="addAnother" href="#" style="margin-left: 40px">Add another</a>

                   </div>

                   <script type="text/javascript">
                $(function () {
                    $("#addAnother").unbind('click');
                    // $("#contactEditor").sortable();
                    $("#addAnother").click(function () {
                        $.get('/Login/ContactRow', function (template) {
                            $("#contactEditor").append(template);
                        });
                    });
                });
            </script>
  
              
            </div>
     
        <p>
            <input type="submit" value="Accept" name="btnstatus"/>
        </p>   
        
        <p>
            <input type="submit" value="Reject" name="btnstatus"/>
        </p>
}

