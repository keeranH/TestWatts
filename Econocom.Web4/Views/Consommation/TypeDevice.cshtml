            function showLoading() {
                $(".hideContent").hide();
                $("#loading").show();
                if ($.browser.msie) {
                    $("#loading").css("background-image", "url('/Content/images/00_Attente.gif')"); //handle IE9 bug
                }
                $('html, body').css({
                    'overflow': 'hidden'
                });
            }
         
</script>

