                <col width="25%px" />
                <col width="25%px" />
                <col width="25%px" />
                
                <thead>
                    <th style="font-family: sans-serif; border: 1px solid black"></th>
                    <th style="font-family: sans-serif; border: 1px solid red">Nom</th>
                    <th style="font-family: sans-serif; border: 1px solid red">Prénom</th>
                    <th style="font-family: sans-serif; border: 1px solid red">Adresse Email</th>

                </thead>
             
               
                @RenderSection("UserTable", required: false)

            </table>*@
   

    </div>

    @RenderBody()

</div>
