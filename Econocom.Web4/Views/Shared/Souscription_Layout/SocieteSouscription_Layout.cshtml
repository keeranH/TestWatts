@using Econocom.Resource;

@{
    ViewBag.Title = "Societe_Layout";

    <style type="text/css" media="screen">
        .societeContentDiv {
            height: 500px;
        }

        .societeLeftDiv {
            height: 450px;
        }

        .societeRightDiv {
            height: 450px
        }
    </style> 

    <style type="text/css" media="print">
        .societeContentDiv {
            height: 400px;
        }
        
        .societeLeftDiv {
            height: 320px;
        }
        
        .societeRightDiv {
            height: 320px
        }
    </style>
}

<div style=" width:800px" id="societeContentDiv" class="societeContentDiv">
    <div style="width:790px; height:60px;">
        
        @if (ViewBag.subscribeType == "start")
        {
            <div style="float: left; width: 700px; height: 50px; margin-left: -5px; margin-bottom: 25px;" align="left">
                <div style="float: left; width: 50px">
                    <img src="~/Content/images/Numero_Rond/rond_1.png" />
                </div>
                <div style="float: left; width: 500px; margin-top: 10px" align="left">
                    <span style="font-size: 1.7em; font-family: sans-serif">@Traduction.Societe</span>
                </div>
            </div>
        }
    
        
         @if (ViewBag.subscribeType != "start")
         {
             <div align="right" style="width: 700px; float: left; height: 40px; border-top: 1px solid gray; border-bottom: 1px solid gray"> @RenderSection("Option", required: false)</div>
         }
         else
         {
             @RenderSection("Option", required: false)
         }
    </div>
    
 
    <div id="societeLeftDiv" class="societeLeftDiv" style="width: 390px;  float: left; margin-left:-20px">

        <div id="societeRaisonSociale" style="width: 350px; height: 60px">
            <div align="left" style="float: left; width: 100%">@RenderSection("RaisonSociale", required: true)</div>
        </div>

        <div id="societeAddressDiv" style="width: 350px; height: 130px">
            <div align="left" style="float: left; width: 100%; height: 70px">
                @RenderSection("Addresse", required: false)
            </div>
        </div>

        <div style="width: 320px; height: 60px;  margin-left: -28px">
            <div style="width: 120px; height: 90px; float: left;">
                <div align="left">@RenderSection("CP", required: false)</div>
            </div>

            <div style="width: 180px; height: 90px; float: left;margin-left: -20px">
                <div align="left">@RenderSection("Ville", required: false)</div>
            </div>
        </div>

        <div align="left" id="societeTva" style="width: 350px; height: 100px;">
            <div style="float: left; width: 100%; height: 70px; margin-top: -27px">@RenderSection("Tva", required: false)</div>
        </div>

        <div align="left" id="societeDejaCLient" style="width: 350px; height: 100px; margin-top: -27px">
            <div style="float: left; width: 50px; height: 40px">@RenderSection("DejaClient", required: false)</div>
        </div>
    </div>

    <div id="societeRightDiv" class="societeRightDiv" style="width: 390px; float: left">

        <div id="societeGroupe" style="width: 350px; height: 60px">
            <div align="left" style="float: left; width: 100%;">@RenderSection("Groupe", required: false)</div>
        </div>

        <div id="societePays" style="width: 350px; height: 130px">
            <div align="left" style="float: left; width: 100%;">@RenderSection("Pays", required: false)</div>
        </div>

        <div style="width: 350px; height: 300px">
            <div id="societeCode" style="width: 350px; height: 60px">
                <div align="left" style="float: left; width: 100%;">@RenderSection("IdentificationNational", required: false)</div>
            </div>
            <div id="societeChiffres" style="width: 350px; height: 60px">
                <div align="left" style="float: left; width: 100%;">@RenderSection("ChiffresAffaires", required: false)</div>
            </div>
            <div id="societeVotreContact" style="width: 350px; height: 60px">
                <div align="left" style="float: left; width: 100%;">@RenderSection("VotreContacte", required: false)</div>
            </div>
        </div>
    </div>
    
    @RenderBody()

</div>
