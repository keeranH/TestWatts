@using Omu.Awesome.Mvc.Helpers
@using Econocom.Resource;

<!DOCTYPE>
<html>


    <head>
        
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
