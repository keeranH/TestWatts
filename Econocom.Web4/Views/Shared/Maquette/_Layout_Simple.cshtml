        </script>
    </head>
    <body>
        <header class="HeaderLayout">
            <div class="TopContentDiv">
                <div class="EmptyTopDiv"> </div>
                    <div class="LayoutHeader">
                        <div class="VisuelLogo">
                        
                            <img src="@Url.Content("~/Content/images/logo.gif")"/>

                        </div>
                        <div class="LoginDiv">
                            <section id="login">
                                @Html.Partial("_LoginPartial")
                            </section>
                        </div>

                        <div>
                            <nav class="BarreMenuNav">
                                @Html.Partial("Barre_Menu/Simple")
                            </nav>
                        </div>
                        <div>
                            <img src="@Url.Content("~/Content/images/Home/Sans-titre-1.png")" />
                        </div>
                </div>
            </div>
        </header>

        <div class="LayoutBodyContentDiv">
            <div id="body" class="BodyDiv" >
                @RenderSection("featured", required: false)
                <section class="content-wrapper main-content clear-fix BodySection">
                    @RenderBody()
                </section>
            </div>
        </div>

        <footer>
            <div style="width:870px;height:30px; margin-left:auto; margin-right:auto;text-align:right; padding-top:30px;">
	            <a href="http://www.linkedin.com/company/econocom"><img src="~/Content/images/social/Picto_LinkedIn.gif" /></a>
	            <a href="http://fr.viadeo.com/fr/company/econocom"><img src="~/Content/images/social/Picto_Viadeo.gif" /></a>
	            <a href="https://twitter.com/econocom"><img src="~/Content/images/social/Picto_Twitter.gif" /></a>
            </div>
            <div class="content-wrapper FooterDiv" >
                <div class="float-left CopyrightDiv">
                         <ul class="Copyright_Econocom FooterMenu"> 
                            <li>Copyright &copy; @DateTime.Now.Year - Econocom. @Traduction.TousDroitReserver</li>
                         </ul>
                     </div>
                <div class="float-right" style="padding-top:5px;">
                    <ul class="Copyright_Econocom FooterMenu">
                        <li>@Html.ActionLink("FAQ", "Index", "Faq",null, new {style="font-size: 1.1em;color: #999;"})</li>            
                        <li>@Html.ActionLink("Contact", "Contact", "Support",null, new {style="font-size: 1.1em;color: #999;"})</li>                
                        <li>@Html.ActionLink(@Traduction.MentionLegale, "Index", "MentionLegale",null, new {style="font-size: 1.1em;color: #999;"})</li>
                    </ul>
                </div>
            </div>
        </footer>
        @(Html.MakePopupForm("Login", controller:"Login", title:"Login", okText: Traduction.Identifier, cancelText: Traduction.Annuler, successFunction:"loginSuccess", height:340, width:350, resizable:false))
       
        @RenderSection("scripts", required: false)
    </body>
</html>