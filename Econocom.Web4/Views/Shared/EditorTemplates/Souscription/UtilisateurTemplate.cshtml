@model Econocom.Model.ViewModel.UtilisateurSouscriptionViewModel
@using Econocom.Resource;

@{
    ViewBag.Title = "ContactTemplate";
    Layout = "~/Views/Shared/Souscription_Layout/UtilisateurSouscription_Layout.cshtml";

    <style type="text/css">
        .wide
        {
            width: 205px;
            height: 30px;
        }
    </style>
}

@section option{
    @if (ViewBag.subscribeType != "start")
    {
        <div align="left" style="width: 200px; float: left">
            <span style="font-size: 1.5em">@Traduction.Utilisateurs</span>
        </div>
        
        <div style="width: 300px">
            <input type="submit" value="@Traduction.Sauvegarder"/>
        </div>
    }
}

@section UserTable
{
    @for (var i = 0; i < 5; i++)
    {
        @Html.HiddenFor(Model => Model.ListeUtilisateurs[i].id)
        <tr>
            <td><span style="font-size: 14px; font-weight: bold">User @(i + 1)</span></td>

            <td>@Html.TextBoxFor(x => x.ListeUtilisateurs[i].Nom, Traduction.Nom, new { @class = "wide" }) </td>

            <td> @Html.TextBoxFor(x => x.ListeUtilisateurs[i].Prenom, Traduction.Prenom, new { @class = "wide" })</td>

            <td> @Html.TextBoxFor(x => x.ListeUtilisateurs[i].Email, Traduction.AddresseMail, new { @class = "wide" }) </td>
        </tr>
    }
}