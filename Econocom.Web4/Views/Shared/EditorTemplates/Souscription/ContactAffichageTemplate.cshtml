@{
    ViewBag.Title = "Contact_Layout";    
}
<head>
    <style>
        .FieldSectionStyle
        {
            border: 1px solid red;
            width: 350px;
            height: 100px;
            float: left;
        }
        .LabelStyle
        {
            float: left;
            width: 100%;
            border: 1px solid black;
            height: 70px;
        }
        .MainDivStyle
        {
            border: 1px solid red;
            width: 390px;
            height: 330px;
            float: left;
        }
    </style>
</head>
<body>
    <div style="border: 1px solid black; width: 800px; height: 700px" id="ContactContentDiv">
        <div style="width: 790px; height: 40px">
            <div align="right" style="width: 200px; float: left">
                @RenderSection("Option", required: false)</div>
        </div>
        <div id="souscripteurLeftDiv" class="MainDivStyle">
            <div id="nom" class="FieldSectionStyle">
                <span style="float: left">Nom</span>
                <div align="left" class="LabelStyle">
                    @RenderSection("Nom", required: false)
                </div>
            </div>
            <div id="fonction" class="FieldSectionStyle">
                <span style="float: left">Fonction</span>
                <div align="left" class="LabelStyle">
                    @RenderSection("Fonction", required: false)
                </div>
            </div>
            <div id="addMail" class="FieldSectionStyle">
                <span style="float: left">Adresse Mail</span>
                <div align="left" class="LabelStyle">
                    @RenderSection("AdresseMail", required: false)
                </div>
            </div>
        </div>
        <div id="societeRightDiv" class="MainDivStyle">
            <div id="prenom" class="FieldSectionStyle">
                <span style="float: left">Prénom</span>
                <div align="left" class="LabelStyle">
                    @RenderSection("Prenom", required: false)
                </div>
            </div>
            <div id="fonction" class="FieldSectionStyle">
            </div>
            <div id="telephone" class="FieldSectionStyle">
                <span style="float: left">Téléphone</span>
                <div align="left" class="LabelStyle">
                    @RenderSection("Telephone", required: false)
                </div>
            </div>
            @RenderBody()
        </div>
</body>
