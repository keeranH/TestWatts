@using Econocom.Resource
@model IEnumerable<dynamic>

@{
    ViewBag.Title = @Traduction.TitrePgAccueil;
    Layout = "~/Views/Shared/Maquette/_Layout_Info.cshtml";
    
    <link href="@Url.Content("~/Content/tooltip/easyui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/tooltip/icon.css")" rel="stylesheet" type="text/css" />   
    <link href="@Url.Content("~/Content/css/Home/Home.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/css/Tooltip/Tooltip.css")" rel="stylesheet" type="text/css"/>
  
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.easyui.min.js")"></script>
  
    <script type="text/javascript">
        jQuery(document).ready(function () {
            changePosition();

            function changePosition() {
                jQuery('.boutonGris').tooltip({
                    position: "top"

                });

                jQuery('.boutonPayant').tooltip({
                    position: "top"
                });

                jQuery('.xyza').tooltip({
                    position: "top"
                });
            }
        });

    </script>
    
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")"></script>
    <script type="text/Javascript" src="/Scripts/jquery.easyslides.min.v1.1.js"></script>
        <link rel="stylesheet" type="text/css" href="/Content/easySlides.default.min.css" />
        <!-- Include own Javascript/jQuery & CSS file for Example 1 -->
       
        <link rel="stylesheet" type="text/css" href="/Content/imageslider.css" />

    <script type="text/javascript">
       var jQuery_1_8_2 = $.noConflict(true);
        jQuery_1_8_2(document).ready(function() {
            // Set up our options for the slideshow...
            var myOptions = {
                noImages: @ViewBag.NumImages,
                path: '@ViewBag.Folder',  // Relative path with trailing slash.                   
                linksOpen: 'newWindow',
                timerInterval: 1500, // 6500 = 6.5 seconds
                randomise: false // Start with random image?
            };

            jQuery_1_8_2('#imageSlider').easySlides(myOptions);

        });

    </script> 
    
   
}

@if (@ViewBag.ContenuModere != null)
{
    @Html.Raw(@ViewBag.ContenuModere.Contenu)
}