@model Econocom.Model.ViewModel.Report.ViewModelReportClient
           
<link href="@Url.Content("~/Content/jquery.mobile-1.3.0.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.mobile-1.3.0.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $('.divC').bind('expand', function () {
        alert('Expanded');
    }).bind('collapse', function () {
        alert('Collapsed');
    });
</script>

<style>
.ui-collapsible-inset .ui-collapsible-content
{
margin-left: 0;
}

.ui-btn-inner {
display: block;
position: relative;
text-overflow: ellipsis;
overflow: hidden;
white-space: nowrap;
zoom: 1;
}

.ui-btn-inner 
{
    padding-right: 0px !important;
    padding-top: 0px !important;
    padding-bottom: 0px !important;
    padding-left: 40px !important;
 }

input {
    font-size: 1.0em !important;
    background: none;
    padding: 0px;
}

.input.ui-input-text {
    background-image: none !important;
    padding: 0 !important;
    margin: 0 !important;
    min-height: 0em !important;
    line-height: 0em !important;
}

input.ui-input-text, textarea.ui-input-text {
    background-image: none !important;
    padding: 0 !important;
    margin: 0 !important;
    min-height: 0em !important;
    line-height: 0em !important;
}

.ui-collapsible-content {
    padding: 5px 15px;
}

.ui-input-search, div.ui-input-text {
    margin: 0px;
}

.ui-collapsible-heading {
    font-size: 1.0em!important;
}

.ui-collapsible-inset {
    margin: 5px 0px;
}
</style>


<div data-role="page" style="border:solid 1px black;">
    <div data-role="content" style="border:solid 1px blue;">
        <div data-role="collapsible" id="my-collaspible" class="divC ui-collapsible-heading" style="border:solid 1px yellow;">
            <h3>Banque<span style="float:right;border:solid 1px red"></h3>            
            @foreach (var family in Model.ViewModelDeviceFamilies)
            {
                <div data-role="collapsible" id="my-collaspible1" class="divC"> 
                    <h3>@Html.DisplayFor(modelItem => family.Label)
                      <span style="float: right; margin-right: 80px; width:100px;">@family.Value</span>
                    </h3>
                    @{
                        Html.RenderPartial("Report/Category", family.ViewModelDeviceCategories);                                   
                    }
                </div>
            }
            
        </div>
	</div>
	<div data-role="content" style="padding:0px;">		
		<div data-role="collapsible" id="my-collaspible" class="divC" style="padding:0px;">
		    <h3>Total<span style="float:right;border:solid 1px red"></span><span style="float:right; margin-right:80px;">@Model.Total</span></h3>
        </div>		
    </div>
</div>

