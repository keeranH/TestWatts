@model IEnumerable<Econocom.Model.Models.Benchmark.Company>

@{
    ViewBag.Title = "Index";
}

@{
       var grid = new WebGrid(source: Model,
          defaultSort: "Name",
          rowsPerPage: 3);
   }
<h2>Index</h2>
@grid.GetHtml(
     tableStyle: "grid",
       headerStyle: "head",
       alternatingRowStyle: "alt",
       columns: grid.Columns(
          grid.Column("Name"),
           grid.Column("Surname")
      )
    )
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            RaisonSocial
        </th>
        <th>
            Address1
        </th>
        <th>
            ComplementAddress
        </th>
        <th>
            City
        </th>
        <th>
            Country
        </th>
        <th>
            Group
        </th>
        <th>
            Sector
        </th>
        <th>
            Surname
        </th>
        <th>
            Forename
        </th>
        <th>
            JobTitle
        </th>
        <th>
            Email
        </th>
        <th>
            Phone
        </th>
        <th>
            Mobile
        </th>
        <th>
            NumberOfEmployees
        </th>
        <th>
            EmployeeDeviceRatio
        </th>
        <th>
            CompanyReturn
        </th>
        <th>
            NumberOfSite
        </th>
        <th>
            AveragePricePerKWatt
        </th>
        <th>
            TotalKWattPerYear
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RaisonSocial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ComplementAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
