        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfEmployees)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeDeviceRatio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyReturn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfSite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AveragePricePerKWatt)
        </td>
