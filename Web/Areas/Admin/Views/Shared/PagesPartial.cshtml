@model IEnumerable<Econocom.Model.Models.CMS.Page>

@{

    WebGrid grid = new WebGrid(Model);

}

<div>
    @grid.GetHtml(columns: new[]
    {
        grid.Column(
            "Nom",
            header:"",
            format:(item) => @Ajax.ActionLink(
                             (string)item.Nom,
                             "ModifierPage",
                             "Section",
                             new
                                {
                                    nomDePage = item.Nom
                                },
                             new AjaxOptions {UpdateTargetId = "contentDivPartial"})
                    )
    })
    

</div>