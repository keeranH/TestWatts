@model Econocom.Model.Models.CMS.Page

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Page</legend>

        @Html.HiddenFor(model => Model.Models.CMS.id)

        <div class="editor-label">
            @Html.LabelFor(model => Model.Models.CMS.template_id, "Template")
        </div>
        <div class="editor-field">
            @Html.DropDownList("template_id", String.Empty)
            @Html.ValidationMessageFor(model => Model.Models.CMS.template_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => Model.Models.CMS.section_id, "Section")
        </div>
        <div class="editor-field">
            @Html.DropDownList("section_id", String.Empty)
            @Html.ValidationMessageFor(model => Model.Models.CMS.section_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => Model.Models.CMS.relative_path)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => Model.Models.CMS.relative_path)
            @Html.ValidationMessageFor(model => Model.Models.CMS.relative_path)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => Model.Models.CMS.enabled)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => Model.Models.CMS.enabled)
            @Html.ValidationMessageFor(model => Model.Models.CMS.enabled)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => Model.Models.CMS.unpublished_template_id)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => Model.Models.CMS.unpublished_template_id)
            @Html.ValidationMessageFor(model => Model.Models.CMS.unpublished_template_id)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
